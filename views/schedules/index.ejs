<% layout('layouts/boilerplate')%>
<div class="mx-5 row">
    <h1>All Schedules</h1>
    <% for (let schedule of schedules){%>
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Doctor <%=schedule.author.username%></h5>
                </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= schedule.author.collage %> </li>
                        <li class="list-group-item"><%= schedule.author.department %></li>
                    </ul>
                <div class="card-body">
                    <a class="btn btn-info" href="/schedules/<%=schedule._id%>">View Schedule</a>
                </div>
            </div> 
        </div>
    <% }%>
</div>
